<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Change groupId to your own main package name -->
    <groupId>games.coob</groupId>

    <!-- Change artifactId to your plugin name, lower cased. Do NOT use spaces. -->
    <artifactId>core</artifactId>

    <!-- Change name to your plugin's name. Do NOT use spaces. -->
    <name>SMP</name>

    <!-- Change version to the appropriate plugin's versions. -->
    <version>1.0.0</version>

    <!-- DO NOT EDIT -->
    <packaging>jar</packaging>

    <properties>

        <!-- Change author to your name or the main collaborator. -->
        <author>jackout</author>

        <!-- Change main.class to the full path where the class extending SimplePlugin is located -->
        <main.class>games.coob.smp.SMPPlugin</main.class>

        <!-- Change java.version to the Java version used when compiling.
             If you use 1.8 then your plugin will work on newer versions,
             but if you use "11" or "16" then it will not load on servers
             with previous Java version. We recommend you stick with 1.8. -->
        <java.version>18</java.version>

        <!-- Change foundation.version to the latest one from
             https://github.com/kangarko/Foundation/releases -->
        <foundation.version>6.0.1</foundation.version>
        <effectlib.version>9.4</effectlib.version>

        <!-- DO NOT EDIT -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <!-- DO NOT EDIT, used to pull Foundation from the JitPack site -->
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
        <repository>
            <id>Maven Central</id>
            <url>https://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>games.coob</groupId>
            <artifactId>nmsinterface</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>games.coob</groupId>
            <artifactId>v1_18</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>games.coob</groupId>
            <artifactId>v1_17</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <!-- Use our Foundation library -->
        <dependency>

            <!-- IF you have Foundation on your disk, change groupId to org.mineacademy,
                 if you pull Foundation from the Internet use com.github.kangarko

                 *WARNING* If you have Foundation on your disk, you also need to edit the
                 <include>com.github.kangarko:Foundation*</include> line, see below! -->
            <groupId>com.github.kangarko</groupId>
            <artifactId>Foundation</artifactId>
            <version>${foundation.version}</version>
        </dependency>

        <dependency>
            <groupId>com.elmakers.mine.bukkit</groupId>
            <artifactId>EffectLib</artifactId>
            <version>${effectlib.version}</version>
        </dependency>

        <!-- (Optional) Access the server jar for NMS (groupId, artifactId and version do not matter and you
can only use it for your own organization purposes)

Make sure the server is on the top because the IDE will prioritize its methods
over the latest Spigot API from Foundation in case you're developing for another MC version

NB: Edit the <systemPath> to point out to your patched server file on your disk.-->

        <dependency>
            <groupId>coob.games.server</groupId>
            <artifactId>Paper-1.16</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/library/patched_1.16.5.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>coob.games.server</groupId>
            <artifactId>Paper-1.12</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/library/patched_1.12.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>coob.games.server</groupId>
            <artifactId>Paper-1.8</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/library/patched_1.8.8.jar</systemPath>
        </dependency>
    </dependencies>

    <!-- DO NOT EDIT unless instructed to do so or you know what you're doing -->
    <build>
        <finalName>${project.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>

                <!-- Change version to the latest one from
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-jar-plugin -->
                <version>3.2.2</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>

                <!-- Change version to the latest one from
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-compiler-plugin -->
                <version>3.10.1</version>
                <configuration>
                    <source>16</source>
                    <target>16</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>

                <!-- Change version to the latest one from (3.2.4 > 16 < 3.3.0-SNAPSHOT)
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-shade-plugin -->
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <artifactSet>
                        <includes>

                            <!-- IF you have Foundation on your disk, change include to org.mineacademy,
                                 if you pull Foundation from the Internet use com.github.kangarko  -->
                            <include>com.github.kangarko:Foundation*</include>
                            <include>com.elmakers.mine.bukkit:EffectLib</include>
                            <include>games.coob:v1_17*</include>
                            <include>games.coob:v1_18*</include>
                            <include>games.coob:nmsinterface*</include>
                        </includes>
                    </artifactSet>
                    <relocations>
                        <relocation>
                            <pattern>org.mineacademy.fo</pattern>
                            <shadedPattern>${project.groupId}.smp.lib</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>games.coob.v1_17</pattern>
                            <shadedPattern>${project.groupId}.smp.lib.1_17</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>games.coob.v1_18</pattern>
                            <shadedPattern>${project.groupId}.smp.lib.1_18</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>games.coob.nmsinterface</pattern>
                            <shadedPattern>${project.groupId}.smp.lib.nmsinterface</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>de.slikey</pattern>
                            <shadedPattern>${project.groupId}.${project.artifactId}.lib.effects</shadedPattern>
                        </relocation>
                    </relocations>
                    <filters>
                        <filter>
                            <artifact>com.elmakers.mine.bukkit:*</artifact>
                            <excludes>
                                <exclude>*.yml</exclude>
                                <exclude>*.php</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
