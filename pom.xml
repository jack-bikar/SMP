<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Change groupId to your own main package name -->
    <groupId>games.coob</groupId>

    <!-- Change artifactId to your plugin name, lower cased. Do NOT use spaces. -->
    <artifactId>core</artifactId>

    <!-- Change name to your plugin's name. Do NOT use spaces. -->
    <name>SMP</name>

    <!-- Change version to the appropriate plugin's versions. -->
    <version>1.0.0</version>

    <!-- DO NOT EDIT -->
    <packaging>jar</packaging>

    <properties>

        <!-- Change author to your name or the main collaborator. -->
        <author>JackOUT</author>

        <!-- Change main.class to the full path where the class extending SimplePlugin is located -->
        <main.class>games.coob.smp.SMPPlugin</main.class>

        <!-- Java 21 required for Minecraft 1.21+ -->
        <java.version>21</java.version>

        <!-- Change foundation.version to the latest one from
             https://github.com/kangarko/Foundation/releases -->
        <foundation.version>6.0.1</foundation.version>
        <effectlib.version>9.4</effectlib.version>

        <!-- DO NOT EDIT -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <!-- DO NOT EDIT, used to pull Foundation from the JitPack site -->
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
        <repository>
            <id>Maven Central</id>
            <url>https://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>games.coob</groupId>
            <artifactId>nmsinterface</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <!-- Use our Foundation library -->
        <dependency>
            <groupId>com.github.kangarko</groupId>
            <artifactId>Foundation</artifactId>
            <version>${foundation.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elmakers.mine.bukkit</groupId>
            <artifactId>EffectLib</artifactId>
            <version>${effectlib.version}</version>
        </dependency>
    </dependencies>

    <!-- DO NOT EDIT unless instructed to do so or you know what you're doing -->
    <build>
        <finalName>${project.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>

                <!-- Change version to the latest one from
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-jar-plugin -->
                <version>3.2.2</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>

                <!-- Change version to the latest one from
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-compiler-plugin -->
                <version>3.10.1</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>

                <!-- Change version to the latest one from (3.2.4 > 16 < 3.3.0-SNAPSHOT)
                     https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-shade-plugin -->
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <artifactSet>
                        <includes>

                            <!-- IF you have Foundation on your disk, change include to org.mineacademy,
                                 if you pull Foundation from the Internet use com.github.kangarko  -->
                            <include>com.github.kangarko:Foundation*</include>
                            <include>com.elmakers.mine.bukkit:EffectLib</include>
                            <include>games.coob:nmsinterface*</include>
                        </includes>
                    </artifactSet>
                    <relocations>
                        <relocation>
                            <pattern>org.mineacademy.fo</pattern>
                            <shadedPattern>${project.groupId}.smp.lib</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>games.coob.nmsinterface</pattern>
                            <shadedPattern>${project.groupId}.smp.lib.nmsinterface</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>de.slikey</pattern>
                            <shadedPattern>${project.groupId}.${project.artifactId}.lib.effects</shadedPattern>
                        </relocation>
                    </relocations>
                    <filters>
                        <filter>
                            <artifact>com.elmakers.mine.bukkit:*</artifact>
                            <excludes>
                                <exclude>*.yml</exclude>
                                <exclude>*.php</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
